<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h2>Edit Author (ID: {{author._id}})</h2>
    <form class="form" action="/authors/{{author._id}}?_method=PUT" method="POST">
      <input type="hidden" name="_csrf" value="{{csrf}}">

      <div class="form-group">
        <label for="name" class="ccontrol-label">Name</label>
        <input type="text" class="form-control" id="name" name="name"
               value="{{author.name}}">
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-default">Edit Author</button>
      </div>
    </form>
  </div>
</div>
