<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h3 class="text-center">Authors:</h3>
    <table class="table">
      <thead>
        <th class="text-center">ID</th>
        <th class="text-center">Name</th>
        <th class="text-center">Actions</th>
      </thead>
      <tbody>
        {{#each authors}}
          <tr>
            <td class="text-center">{{_id}}</td>
            <td class="text-center">{{link name (concat "/authors/" _id)}}</td>
            <td class="text-center">
              <a href="/authors/edit/{{_id}}" class="edit-link">
                Edit
              </a>
              <form method="POST" action="/authors/{{_id}}?_method=DELETE">
                <button type="submit" class="btn btn-link del-link">
                  Delete
                </button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
