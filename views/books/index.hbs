<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h3 class="text-center">Books:</h3>
    <table class="table">
      <thead>
        <th class="text-center">ID</th>
        <th class="text-center">Title</th>
        <th class="text-center">Actions</th>
      </thead>
      <tbody>
        {{#each books}}
          <tr>
            <td class="text-center">{{_id}}</td>
            <td class="text-center">{{link title (concat "/books/" _id)}}</td>
            <td class="text-center">
              <a href="/books/edit/{{_id}}" class="edit-link">
                Edit
              </a>
              <form method="POST" action="/books/{{_id}}?_method=DELETE">
                <button type="submit" class="btn btn-link del-link">
                  Delete
                </button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
